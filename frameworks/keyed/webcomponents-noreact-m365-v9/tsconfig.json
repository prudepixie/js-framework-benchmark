{
  "compilerOptions": {
    "pretty": true,
    "target": "ES2015",
    "module": "ESNext",
    "moduleResolution": "node",
    "importHelpers": true,
    "experimentalDecorators": true,
    "declaration": true,
    "declarationMap": true,
    "noEmitOnError": true,
    "outDir": "dist/build",
    "rootDir": "src",
    "skipLibCheck": true,
    "lib": ["dom", "esnext"]
  },
  "include": ["src"]
}
